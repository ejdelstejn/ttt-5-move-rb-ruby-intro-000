#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here

prompt("Welcome to Tic Tac Toe!")
sleep(0.5)

board = [" "," "," "," "," "," "," "," "," "]

display_board(board)
sleep(0.5)

prompt("Where would you like to go?")
input = gets.strip

index = input_to_index(input)

move(board, index, value)

display_board(board)
